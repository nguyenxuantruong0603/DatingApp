<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        app:cardCornerRadius="@dimen/_27sdp">

        <ImageView
            android:id="@+id/imgAvatarDoc"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/gaixinh" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:textColor="#000000"
                    android:id="@+id/tvNameChatDoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/tvMessageChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tối nay đi chơi không"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTimeChatDoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="right"
                    android:text="30 phút"
                    android:textSize="13sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="right"
                    app:cardCornerRadius="@dimen/_12sdp">

                    <TextView
                        android:id="@+id/tvNumberChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF4F1F"
                        android:gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:text="20"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_1sdp"
            android:background="#000000" />
    </LinearLayout>
</LinearLayout>