<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff69b4"
    tools:context="com.example.DatingApp.fragment.informationfragment.SetHeightFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_margin="@dimen/_16sdp"
        app:cardBackgroundColor="#6464"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_baseline_clear_24" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_gravity="center"
        android:layout_marginTop="-200dp"
        android:src="@drawable/ic_ruler" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-130dp"
        android:text="Chiều cao"
        android:textColor="#FFF"
        android:textSize="@dimen/_20sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/background_fragment"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_24sdp">

        <TextView
            android:id="@+id/tvSetHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_24sdp"
            android:text="150 cm"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/sbSetHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:thumb="@drawable/height_seebar" />

        <ImageView
            android:id="@+id/imgSaveHine"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_70sdp"
            android:background="@drawable/radio_reason_checked" />

        <TextView
            android:id="@+id/tvNextHine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_24sdp"
            android:text="Bỏ qua"
            android:textSize="@dimen/_20sdp" />
    </LinearLayout>


</FrameLayout>