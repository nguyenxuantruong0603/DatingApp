<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_16sdp"
    android:orientation="vertical"
    tools:context="com.example.DatingApp.activity.AccountActivity">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ tên"
        app:hintTextColor="#ff69b4">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtBirthDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ngày sinh"
        app:hintTextColor="#ff69b4">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="date|datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="Giới tính"
        android:textSize="@dimen/_14sdp" />

    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rdNewFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:button="@drawable/radio_reason_selector"
            android:checked="false"
            android:fontFamily="sans-serif-black"
            android:padding="@dimen/_4sdp"
            android:text="     Nam"
            android:textColor="#000000" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rdChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_56sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:button="@drawable/radio_reason_selector"
            android:checked="false"
            android:fontFamily="sans-serif-black"
            android:padding="@dimen/_4sdp"
            android:text="     Nữ"
            android:textColor="#000000" />
    </RadioGroup>

</LinearLayout>