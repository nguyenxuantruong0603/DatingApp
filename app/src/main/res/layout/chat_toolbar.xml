<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="7">

    <ImageView
        android:id="@+id/imgEndToolbar"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginStart="-8dp"
        android:layout_marginLeft="-8dp"
        android:background="@drawable/back" />

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_20sdp">

        <ImageView
            android:id="@+id/imgAvatarToolbar"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/khabanh" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mai Trang"
            android:textColor="#000000"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Äang online"
                android:textColor="#4AED26"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView

        android:id="@+id/imgMoreToolBar"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center|end"
        android:background="@drawable/more" />

</LinearLayout>