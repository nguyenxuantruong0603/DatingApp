<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_14sdp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.DatingApp.activity.InformationUserActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context="com.example.DatingApp.activity.InformationUserActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">
                                                                                                                                                            
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gaixinh3"
                    app:riv_corner_radius="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_87sdp"
                        android:layout_height="@dimen/_87sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gaixinh"
                        app:riv_corner_radius="@dimen/_5sdp" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_87sdp"
                        android:layout_height="@dimen/_87sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gaixinh3"
                        app:riv_corner_radius="@dimen/_5sdp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/_87sdp"
                    android:layout_height="@dimen/_87sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gaixinh"
                    app:riv_corner_radius="@dimen/_5sdp" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/_87sdp"
                    android:layout_height="@dimen/_87sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gaixinh4"
                    app:riv_corner_radius="@dimen/_5sdp" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/_87sdp"
                    android:layout_height="@dimen/_87sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gaixinh2"
                    app:riv_corner_radius="@dimen/_5sdp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="sans-serif-medium"
                android:text="Hoàng Anh, 18"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvNameInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nữ, Hà Nội" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="Tôi ở đây để ?"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvAddReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="AddReason"
                android:text="Thêm"
                android:textColor="#ff69b4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="Công việc và học vấn"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvAddWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="AddWork"
                android:text="Thêm"
                android:textColor="#ff69b4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="Về bạn"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvAboutYou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cho chúng tôi biết thêm về bạn..." />

            <include
                layout="@layout/detail_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/contact_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>